<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="15dp">

    <RadioGroup
        android:id="@+id/sort_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/sort_by_upload_time_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/keyword_toggle_background"
            android:button="@null"
            android:checked="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:minWidth="1dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="업로드 시간"
            android:textAlignment="center"
            android:textColor="@color/keyword_toggle_text_color"
            android:textSize="14dp" />

        <RadioButton
            android:id="@+id/sort_by_play_time_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/keyword_toggle_background"
            android:button="@null"
            android:foreground="?android:attr/selectableItemBackground"
            android:minWidth="1dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="영상 길이"
            android:textAlignment="center"
            android:textColor="@color/keyword_toggle_text_color"
            android:textSize="14dp" />

        <RadioButton
            android:id="@+id/sort_by_title_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/keyword_toggle_background"
            android:button="@null"
            android:foreground="?android:attr/selectableItemBackground"
            android:minWidth="1dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="제목"
            android:textAlignment="center"
            android:textColor="@color/keyword_toggle_text_color"
            android:textSize="14dp" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>